<link rel="stylesheet" type="text/css" href="/css/dataTables.bootstrap.min.css">
<link rel="stylesheet" href="/css/jquery.dataTables.min.css">

<div class="col-md-6 col-lg-6">
    <form action="/app/user/addpatient" method="post">
        <!-- First name input -->
        <div class="form-group row">
            <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">姓氏</label>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <input id="first-name" class="form-control" style="width: 100%;" type="text" name="firstName" required="true" placeholder="请输入姓氏">
            </div>
        </div>

        <!-- Last name input -->
        <div class="form-group row">
            <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">名字</label>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <input class="form-control" style="width: 100%;" type="text" name="lastName" required="true" placeholder="请输入名字">
            </div>
        </div>

        <!-- Hospital number input -->
        <div class="form-group row">
            <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">患者序号</label>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <input class="form-control" style="width: 100%;" type="text" name="hospitalNumber" required="true" placeholder="请输入患者序号">
            </div>
        </div>

        <!-- Date of birth -->
        <div class="form-group row">
            <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">生日</label>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <input class="form-control" style="width: 100%;" type="text" name="dateOfBirth" required="true" placeholder="日/月/年 例：01/01/2000">
            </div>
        </div>



        <!-- Sex -->
        <div class="form-group row">
            <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">性别</label>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <div class="btn-group" data-toggle="buttons">
                  <label class="btn btn-primary active" style="margin:0px;">
                    <input id="male-radio" type="radio" name="sex" value="male" autocomplete="off" checked>男
                  </label>
                  <label class="btn btn-primary" style="margin:0px;">
                    <input id="female-radio" type="radio" name="sex" value="female" autocomplete="off"> 女
                  </label>
                </div>
            </div>
        </div>

    	<table id="add-new-patient" class="table table-striped table-bordered" cellspacing="0" width="100%">
    		<!-- JavaScript works here! -->
    	</table>
    	<input class="btn btn-success" style="float: right;" type="Submit" name="Submit" value="添加病人">
    </form>
</div>

<script type="text/javascript" src="/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="/js/dataTables.bootstrap.min.js"></script>
<script type="text/javascript" src="/scripts/addpatient.js"></script>
